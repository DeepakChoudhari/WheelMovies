{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information",
      "Microsoft.EntityFrameworkCore.Query": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "RollingFileAlternate",
        "Args": {
          "logDirectory": ".\\Log",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 52428800,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss}  [{Level}] {EventId} {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "WheelMoviesDbConnection": "Data Source=.\\sqlexpress;Initial Catalog=WheelMovies;Integrated Security=True"
  }
}
